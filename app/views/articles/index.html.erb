<div class="container">
  <div class="row">
    <div class="col-md-12">
        <div class='row'>
          <div class='col-md-8 col-md-offset-2 text-center'>  
          <h1> All Articles</h1>
          
          <% if user_signed_in? %>
            <%= link_to "New Article", new_article_path, class: "btn btn-default", id: "new-article-btn" %>
          <% end %>
          <% @articles.each do |article| %>
            <div class="well well-lg">
              <div class="article-title text-center">
                <%= link_to article.title, article_path(article) %>
              </div>
              <div class="article-body text-center">
                <%= truncate(article.body, lenght: 300) %>
              </div>
              <div class="author text-center">
                <% if article.user %>
                  <small>Created by: <%= article.user.first_name %></small>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</container>    
