<%= render 'layout/messages' %>

<div class="row">
  <div class="col-md-10- col-md-offset-1">
    <div class="col-md-8">
      <%= yield %>
    </div>
      <div class="col-md-4">
        <%= yield :sidebar %>
      </div> 
    </div>
  </div>
</div>


</body>
</html>
